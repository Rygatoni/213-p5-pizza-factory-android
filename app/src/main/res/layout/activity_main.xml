<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFD5AF"
    android:visibility="visible"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/current_orders_btn"
        android:layout_width="204dp"
        android:layout_height="64dp"
        android:backgroundTint="#8E7D62"
        android:foregroundTint="#883030"
        android:text="Current Orders"
        android:visibility="visible"
        app:iconTint="#9A1414"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/add_btn"
        android:layout_width="204dp"
        android:layout_height="64dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="#8E7D62"
        android:text="Add Pizza"
        app:layout_constraintBottom_toTopOf="@+id/current_orders_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/store_orders_btn"
        android:layout_width="204dp"
        android:layout_height="64dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="#8E7D62"
        android:text="Store Orders"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/current_orders_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>